{
  "rules": {
    "interface-name": [ false ],
    "max-file-line-count": [ true, 300 ],
    "max-line-length": [ true, 160 ],
    "object-literal-sort-keys": false,
    "ordered-imports": [ false ],
    "eofline": false,
    "trailing-comma": [ false ],
    "member-ordering": [true, { "order": "fields-first" }],
    "array-type": [ false, "array-simple" ],
    "max-classes-per-file": [ true, 3 ],
    "linebreak-style": [ false ],
    "quotemark": [ true, "double" ],
    "align": [ true, "parameters" ],
    "missing-jsdoc": false,
    "react-a11y-anchors": false,
    "react-a11y-event-has-role": false,
    "react-tsx-curly-spacing": [ true, "never", { "allowMultiline": true } ],
    "prefer-array-literal": false,
    "no-relative-imports": false,
    "import-name": false,
    "react-this-binding-issue": [ true, { "allow-anonymous-listeners": true } ],
    "no-var-self": false,
    "restrict-plus-operands": false,
    "react-a11y-role-has-required-aria-props": false,
    "no-use-before-declare": false,
    "no-backbone-get-set-outside-model": false,
    "function-name": [true, { "static-method-regex": "^[A-Z][\\w\\d]+$" }],
    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"],
    "prefer-conditional-expression": false,
    "ban-types": false /* we have a lot of Function types used. once we move to () => void, this rule should be enabled */
  },
  "extends": [ "tslint:latest", "./config/recommended_ruleset.js" ],
  "rulesDirectory": [
    "node_modules/tslint-microsoft-contrib"
  ]
}
